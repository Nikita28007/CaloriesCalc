<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleResultTextview"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="Calories per day:"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/caloriesDayResultTextview"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/proteinsResultTextview"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/carbohydratesResultTextview"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fatsResultTextview"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="#000000"
        android:background="#BFFFFFFF"
        android:id="@+id/foodRecResultTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>